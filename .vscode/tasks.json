{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Car Dodge",
            "command": "C:/MinGW/bin/g++.exe",
            "args": [
                "-std=c++17",
                "-IC:/Path/To/SFML/include",
                "-LC:/Path/To/SFML/lib",

                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",

                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "options": {
                "cwd": "C:/MinGW/bin"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
